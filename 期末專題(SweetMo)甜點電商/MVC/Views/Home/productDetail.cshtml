<!-- Contact Start -->
<div class="container-xxl py-6 col-10">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="display-5 mb-3 text-primary">甜點細節</h1>
        </div>

        <!-- aside-left -->
        <div class="row g-5 justify-content-center" id="appVue">
            <div class="col-lg-5 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                @*<div>{{imageName}}</div>*@
                <img class="w-100 momo-pd-img" :src=`/img/${imageName}` :alt=`${productName}`
                     :title=`${productName}` />


                <!-- Carousel Start -->
                @*<div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
                <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="w-100" src="~/img/blackChocolate.jpg" alt="Image" />
                </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
                </button>
                </div>
                </div>*@
                <!-- Carousel End -->

            </div>
            <div class="col-lg-7 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
                <p class="mb-4 display-6 text-primary">
                    {{productName}}
                    {{flavor}}
                </p>
                <form>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="col-12">
                                <div class="">
                                    <span class="text-secondary btn mx-1 my-2 rounded-pill momo-pd-tag" v-for="t in tagArray">{{t}}  </span>
                                </div>
                                <p class="text-primary display-6 col-12">
                                    甜點介紹
                                </p>
                                <p>
                                    {{description}}
                                </p>
                            </div>

                            <div class="col-8">
                                <div v-for="(_size,i) in size" :key="i">

                                    <button type="button" class="btn momo-pd-size" v-on:click="specification(i,$event)">{{_size}}</button>
                                    @*<button type="button" class="btn momo-pd-size" v-on:click="specification(i)" v-if="_size == currentSize">{{_size}}</button>
                                    <button type="button" class="btn momo-pd-size" v-on:click="specification(i)" v-else>{{_size}}</button>*@
                                    @*<span :id="i" v-on:click="specification" class="acive">{{_size+i}}</span>*@
                                    @*如果用span當按鈕的話要點到字才會觸發事件，div的話點到整行都行*@
                                    @* <div v-on:click="specification(i)"  class="momo-pd-size">{{_size}}</div>*@

                                </div>
                                <div class="my-2">
                                    @*<span class="text-primary me-1 display-6" v-for="p in price">${{p}}</span>*@
                                    @*<span class="text-body text-decoration-line-through">${{price+50}}</span>*@
                                    <span class="text-primary me-1 display-6">{{price}}</span>
                                </div>
                                <div>
                                    <span>數量</span>
                                    <input type="number" id="productAmount" name="productAmount" class="border-primary text-center momo-product-amount" min="1" max="20" value="1" v-on:change="amountChange">
                                </div>
                                <!-- <span class="me-2">
                                    加入收藏
                                    <i class="fal fa-heart"></i>
                                    <i class="fas fa-heart"></i>
                                </span> -->
                                <div class="btn btn-primary rounded-pill mt-2 py-1 px-3 momo-pd-cartAnimation" v-on:click="addToCart()">
                                    <i class="fa fa-shopping-bag text-primary me-2" id="addCartBtn"></i>加入購物車
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- 留言版 Strat -->
@*        <div class="section-header text-start mx-auto mb-5 wow fadeInUp mt-4 " data-wow-delay="0.9s">
            <h1 class="display-5 mb-3 text-primary">留言板</h1>
        </div>*@
        <div class="row g-5 justify-content-center mt-4" id="appVue2">
            <div class="accordion accordion-flush border mb-3" data-wow-delay="0.9s" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed  section-header text-primary momo-pd-blog" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            留言板
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                         data-bs-parent="#accordionFlushExample" s>
                        <div class="accordion-body">

                            <ul v-for="item in floors">
                                @*這裡開始v-for，以下的li為留言設計圖*@
                                <li class="mb-1">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item">
                                                <i class="fas fa-user"></i>&nbsp;{{item.nickName}}
                                            </li>
                                            <li class="breadcrumb-item me-auto">{{item.time}}</li>
                                            @* 編輯按鈕(需登入) *@
                                            <li>
                                                <template v-if="MemberID==item.memberID">
                                                    <i class="fas fa-edit" data-bs-toggle="tooltip"
                                                       data-bs-placement="top" title="編輯留言"
                                                       @@click="edit(item.floor)"></i>
                                                </template>
                                            </li>
                                        </ol>
                                    </nav>
                                </li>
                                <li>
                                    @* 編輯 template *@
                                    <template v-if="item.Edit==true">

                                        <textarea class="form-control mb-2" placeholder="編輯留言.."
                                                  style="height: 100px;resize: none;" v-model="item.article"></textarea>

                                        <button type="button" class="btn btn-outline-primary"
                                                @@click="update(item)">
                                            修改
                                        </button>
                                        <button type="button" class="btn btn-outline-warning text-p2"
                                                @@click="cancel">
                                            取消
                                        </button>
                                        <button type="button" class="btn btn-danger"
                                                @@click="deletefloor(item.floor)">
                                            刪除
                                        </button>

                                    </template>

                                    @* 讀取 template *@
                                    <template v-else>
                                        <p>{{item.article}}</p>
                                        <hr />
                                    </template>
                                </li>
                            </ul>

                            <!-- 新增留言區 -->
                            <form action="">
                                <div class="input-group">
                                    <span class="input-group-text"> <i class="fas fa-user"></i>&nbsp;{{nickName}}</span>
                                    <input type="text" class="form-control" placeholder="留言.." v-model="article"
                                           required />
                                    <button type="button" class="btn btn-primary" @@click="insert">送出</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- 留言版 End -->
    </div>
</div>
<!-- Contact End -->

