    <div class="modal fade" data-bs-keyboard="false" data-bs-backdrop="static" id="loginModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content momo-border-radius">
                <div class="modal-header bg-t2 momo-login-div-top">
                    <h5 class="modal-title text-white" id="exampleModalLabel">會員登入</h5>
                    @* Modal關閉鈕 *@
                    <button id="Modal-close" type="button" class="btn-close" data-bs-dismiss="modal"
                            data-bs-keyboard="false" disabled>
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="form-group">
                            <label for="loginmail">
                                <h5 class=" text-t6">帳號</h5>
                            </label><br>
                            <input class="form-control text-t6" type="email" name="" id="loginmail"
                                   placeholder="請輸入 E-mail 或 手機號碼" required>
                            <div class="invalid-feedback">請輸入E-Mail</div>
                        </div>
                        <div class="form-group mt-2">
                            <label for="password">
                                <h5 class=" text-t6">密碼</h5>
                            </label><br>
                            <input class="form-control" type="password" name="" id="password" placeholder="請輸入密碼"
