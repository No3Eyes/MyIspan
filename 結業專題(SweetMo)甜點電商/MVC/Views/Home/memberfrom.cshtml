<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown text-secondary">會員註冊</h1>
    </div>
</div>
<!-- Page Header End -->
<div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
    <h1 class="display-5 mb-3 text-primary">會員資料</h1>
</div>

<div class="container mb-5" id="appVue">
    <div class="card">
        <div class="card-header">
            請輸入以下資料
        </div>
        <div class="card-body">
            <div class="card-title">
                <h4>會員資料表單</h4>
            </div>
            <form action="">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" v-model="email" placeholder="請輸入帳號(Email)">
                    <label for="floatingInput">請輸入帳號(Email)</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" v-model="password" placeholder="請輸入密碼">
                    <label for="floatingInput">請輸入密碼</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" v-model="CheckPass" placeholder="請輸入密碼">
                    <label for="floatingInput">請再次輸入密碼</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" v-model="name" placeholder="請輸入姓名">
                    <label for="floatingInput">請輸入姓名</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" v-model="nickName" placeholder="請輸入暱稱">
                    <label for="floatingInput">請輸入暱稱</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" v-model="phoneNumber" placeholder="請輸入手機號碼" maxlength="10">
                    <label for="floatingInput">請輸入手機號碼</label>
                </div>

                <div class="form-group">
                    <label>
                        <p>生日</p>
                        <input type="date" v-model="birthDay">
                    </label>
                </div>

                <div class="d-grid my-5">
                    <div class="btn-group d-flex">
                        <button type="reset" class="btn btn-warning btn-block">清除表單</button>
                        <button type="button" class="btn btn-primary btn-block" @@click="MakeNewData">一鍵生成</button>
                        <button type="button" class="btn btn-warning btn-block" @@click="PostNewMember">送出資料</button>                       
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.2/axios.min.js"></script>
    <script src="~/js/memberform2.js"></script>
}