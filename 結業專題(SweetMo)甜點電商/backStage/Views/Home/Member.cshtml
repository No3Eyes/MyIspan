@section Styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
}
<h1 class="text-center my-5">會員資料</h1>

<div class="container" id="appVue">
    <button type="button" class="btn btn-outline-success" @@click="showModal">新增資料</button>
    <div class="row">
        <div class="col-12 mt-4">
            @*顯示資料*@
            <table class="table table-striped table-hover">
                @*表頭*@
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>姓名</td>
                        <td>暱稱</td>
                        <td>Email</td>
                        <td>電話</td>
                        <td>密碼</td>
                        <td>編輯按鈕</td>
                    </tr>
                </thead>

                <tbody>
                    <tr v-for="(i,k) in p_item" :key="k">
                        @* 切換編輯組件 *@
                        <template v-if="i.Edit == true">
                            <td>{{i.memberId}}</td>
                            <td><input v-model="i.name" size="6"/></td>
                            <td><input v-model="i.nickName" size="6"/></td>
                            <td><input v-model="i.email" size="20" /></td>
                            <td><input v-model="i.phoneNumber" size="10"/></td>
                            <td><input v-model="i.password" size="8" /></td>
                            <td>
                                <button type="button" class="btn btn-primary" @@click="revise(i)">修改</button>
                                <button type="button" class="btn btn-warning" @@click="cancel">取消</button>
                            </td>
                        </template>

                        @*資料顯示組件*@
                        <template v-else>
                            <td>{{i.memberId}}</td>
                            <td>{{i.name}}</td>
                            <td>{{i.nickName}}</td>
                            <td>{{i.email}}</td>
                            <td>{{i.phoneNumber}}</td>
                            <td>{{i.password}}</td>
                            <td>
                                <span class="form-switch">
                                    @*<input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>*@
                                    <label class="form-check-label" for="flexSwitchCheckChecked">
                                        @* string *@
                                    </label>
                                </span>
                                <button type="button" class="btn btn-primary" @@click="edit(i.memberId)">編輯</button>
                                <button type="button" class="btn btn-danger" @@click="delete(i)">刪除</button>
                            </td>
                        </template>

                    </tr>

                </tbody>
            </table>
        </div>
    </div>

    <!-- modal 視窗 -->
    <div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">新增資料</h4>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="form-group">
                            <label class="form-label">名字</label>
                            <input type="text" class="form-control" v-model="Name" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">暱稱</label>
                            <input type="text" class="form-control" v-model="NickName" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" v-model="Email" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">電話</label>
                            <input type="text" class="form-control" v-model="Phone" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">密碼</label>
                            <input type="text" class="form-control" v-model="Password" id="" />
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="button" class="btn btn-success" @@click="Create">新增資料</button>
                        </div>
                    </div>
                </div><!-- /.modal-body -->
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

