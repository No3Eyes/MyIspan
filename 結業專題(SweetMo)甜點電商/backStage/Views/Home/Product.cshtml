@section Styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
}
<h1 class="text-center my-5">商品資料</h1>

<div class="container" id="appVue">
    <button type="button" class="btn btn-outline-success" @@click="showModal">新增資料</button>
    <div class="row">
        <div class="col-12 mt-4">
            @*顯示資料*@
            <table class="table table-striped table-hover">
                @*表頭*@
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>名稱</td>
                        <td>規格</td>
                        <td>口味</td>
                        <td>價格</td>
                        <td>Tag</td>
                        <td>分類</td>
                        <td>上架狀態</td>
                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;編輯按鈕</td>
                    </tr>
                </thead>

                <tbody>
                    <tr v-for="(i,k) in p_item" :key="k">
                        @* 切換編輯組件 *@
                        <template v-if="i.Edit == true">
                            <td>{{i.productId}}</td>
                            <td><input v-model="i.productName" size="10" /></td>
                            <td><input v-model="i.size" size="10"/></ td>
                            <td><input v-model="i.flavor" size="6" /></td>
                            <td><input v-model="i.price" size="8"/></td>
                            <td><input v-model="i.tag" size="25" /></td>
                            <td><input v-model="i.category" size="6" /></td>
                            <td><input type="checkbox" class="form-check-input" v-model="i.avalible" /></td>
                            <td>
                                <button type="button" class="btn btn-primary" @@click="revise(i)">修改</button>
                                <button type="button" class="btn btn-warning" @@click="cancel">取消</button>
                            </td>
                        </template>

                        @*資料顯示組件*@
                        <template v-else>
                            <td>{{i.productId}}</td>
                            <td>{{i.productName}}</td>
                            <td>{{i.size}}</td>
                            <td>{{i.flavor}}</td>
                            <td>{{i.price}}</td>
                            <td>{{i.tag}}</td>
                            <td>{{i.category}}</td>
                            <td v-if="i.avalible" style="background-color:green; color:white;">上架中</td>
                            <td v-else style="background-color:hotpink">未上架</td>
                            <td>
                                <span class="form-switch">
                                    @*<input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>*@
                                    <label class="form-check-label" for="flexSwitchCheckChecked">
                                        @* string *@
                                    </label>
                                </span>
                                <button type="button" class="btn btn-primary" @@click="edit(i.memberId)">編輯</button>
                                <button type="button" class="btn btn-danger" @@click="Mydelete(i.productId)">刪除</button>
                            </td>
                        </template>

                    </tr>

                </tbody>
            </table>
        </div>
    </div>

    <!-- modal 視窗 -->
    <div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">新增資料</h4>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="form-group">
                            <label class="form-label">名稱</label>
                            <input type="text" class="form-control" v-model="Name" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">規格</label>
                            <input type="text" class="form-control" v-model="Size" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">口味</label>
                            <input type="text" class="form-control" v-model="Flavor" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">價格</label>
                            <input type="text" class="form-control" v-model="Price" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Tag</label>
                            <input type="text" class="form-control" v-model="Tag" id="" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">分類</label>
                            <input type="text" class="form-control" v-model="Category" id="" />
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="form-label" for="NewAvalible" style="cursor:pointer">上架狀態</label>
                            <input type="checkbox" v-model="Avalible" style="cursor:pointer" id="NewAvalible" />
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="file" style="cursor:pointer" v-model="NewImage" id="NewFile" />
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" @@click="FillIn">一鍵生成</button>
                            
                            <button type="button" class="btn btn-success" @@click="Create">新增資料</button>
                        </div>
                    </div>
                </div><!-- /.modal-body -->
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

